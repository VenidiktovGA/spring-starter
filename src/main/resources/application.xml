<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="driver" class="java.lang.String" >
        <constructor-arg type="java.lang.String" value="postgres"/>
    </bean>

    <bean id="pool1" class="ru.venidiktov.database.ConnectionPool">
        <constructor-arg name="username" ref="driver"/>
        <constructor-arg name="poolSize" value="10"/>
        <constructor-arg name="args">
            <list>
            <value>--arg1=value1</value>
            <value>--arg1=value2</value>
                <ref bean="driver"/>
            </list>
        </constructor-arg>
        <constructor-arg name="properties">
            <map>
                <entry key="url" value="localhost"/>
                <entry key="password" value="123"/>
                <entry key="driver" value-ref="driver"/>
            </map>
        </constructor-arg>
    </bean>

    <bean id="userRepository" class="ru.venidiktov.repo.UserRepository" factory-method="of">
        <constructor-arg ref="pool1"></constructor-arg>
    </bean>
</beans>